## Openbox Pipemenu commands for web shortcuts

# Variables and functions
MENUS_LIBDIR='/usr/share/packarch/openbox/menulib'
if ! . "$MENUS_LIBDIR/packarch.cfg" 2> /dev/null; then
	echo "Error: Failed to locate packarch.cfg in $MENUS_LIBDIR" >&2
	exit 1
fi

menuStart
	menuItem 'Gmail' "vivaldi -e https://mail.google.com"
	menuItem 'Wiki Archlinux' "vivaldi -e https://wiki.archlinux.org/title/Main_page_(Fran%C3%A7ais)"
	menuItem 'Github Packarch' "vivaldi -e https://github.com/orgs/packarch/repositories"
	menuItem 'Youtube' "vivaldi -e https://www.youtube.com"
	menuItem '4Chan' "vivaldi -e https://www.4chan.org"
	
menuEnd

exit 0
